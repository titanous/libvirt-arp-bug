<domain type="lxc">
  <name>arp-test</name>
  <os>
    <type>exe</type>
    <init>/vagrant/repro</init>
  </os>
  <memory unit="GiB">1</memory>
  <vcpu>1</vcpu>
  <on_poweroff>preserve</on_poweroff>
  <on_crash>preserve</on_crash>
  <devices>
    <interface type="network">
      <source network="default" />
    </interface>
    <console type="pty" />
  </devices>
</domain>
